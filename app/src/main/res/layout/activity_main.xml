<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/black"
                tools:context=".MainActivity">

    <View
        android:id="@+id/activity_main_rotating_pentagon"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="-250dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/ic_pentagon"/>

    <include
        android:id="@+id/activity_main_rotating_content_first"
        layout="@layout/layout_pentagon_content" />

    <include
        android:id="@+id/activity_main_rotating_content_second"
        layout="@layout/layout_pentagon_content" />

    <include
        android:id="@+id/activity_main_rotating_content_third"
        layout="@layout/layout_pentagon_content" />

    <include
        android:id="@+id/activity_main_rotating_content_fourth"
        layout="@layout/layout_pentagon_content" />

    <include
        android:id="@+id/activity_main_rotating_content_fifth"
        layout="@layout/layout_pentagon_content" />


</FrameLayout>
